<div class="row">
  <div class="col-sm-8 mt-2">
    <div class="card">
      <div class="card-block m-1">
        <h4 class="card-title text-info"><%= article.title %></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %> </p>
      </div>
      <div class="card-block">
        <% if article.comments.length ==0 %>
        <%= link_to  "No comment",article,
        class:'btn btn-link' %>
        <% elsif article.comments.length>1 %>
        <%=link_to "#{article.comments.length} comments",article,
        class:'btn btn-link' %>
        <%else %>
        <%= link_to  "#{article.comments.length} comment",article,
        class:'btn btn-link' %>
        <% end %>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_article_path(article),
        class:'btn btn-secondary' %>
        <%= link_to 'Delete', article_path(article),
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class:'btn btn-warning' %>
      </div>
    </div>
  </div>
</div>