<div class="row">
  <div class="col-sm-8 mt-2">
    <div class="card">
      <div class="card-header">
        <strong><%= link_to "Writter: #{article.user.name}",article.user %></strong>
      </div>
      <div class="card-body">
        <div class="card-block m-1">
          <h4 class="card-title"><%= article.title %></h4>
          <p class="card-text"><%= @markdown.render(article.body).html_safe %> </p>
        </div>
      </div>
      <div class="card-footer text-muted">
        <% if article.comments.length ==0 %>
        <%= link_to  "No comment",article,
        class:'btn btn-link' %>
        <% elsif article.comments.length>1 %>
        <%=link_to "#{article.comments.length} comments",article,
        class:'btn btn-link' %>
        <%else %>
        <%= link_to  "#{article.comments.length} comment",article,
        class:'btn btn-link' %>
        <% end %>

        <% if !current_user.nil? %>
    <% if current_user.id == article.user_id %>
    <nav class="navbar navbar-light bg-light">
     
         <%= link_to 'Edit', edit_article_path(article),
      class:'btn btn-outline-success' %>
   
    
           <%= button_to 'Delete', article_path(article),
      method: :delete,
      data: { confirm: 'Are you sure?' },
      class:'btn btn-light' %>
      
  </nav>
     
     
   
    <% end %>


    <% end %>
      </div>
    </div>
    

  </div>
</div>